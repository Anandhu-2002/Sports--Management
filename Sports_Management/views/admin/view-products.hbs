<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
    </div>
    
    <table class="table mt-5">
      <thead>
        <tr>

          
          <th scope="col"><span class="text">TITLE</span></th>
          <th scope="col"><span class="text">CATEGORY</span></th>
          <th scope="col"><span class="text">DESCRIPTION</span></th>
          <th scope="col"><span class="text">Price</span></th>
          <th scope="col"><span class="text">IMAGES</span></th>
          <th scope="col"><span class="text">Edit</span></th>
          <th scope="col"><span class="text">Delete</span></th>

        </tr>
      </thead>
      <tbody>
        {{#each products}}

        <tr>

          
          <td><span class="text">{{this.Name}}</span></td>
          <td><span class="text">{{this.Category}}</span></td>
          <td><span class="text">{{this.Description}}</span></td>
          <td><span class="text">{{this.Price}}</span></td>
          <td><img style="width: 50px;height:50px" src="/product-img/{{this._id}}.jpg"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
          <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a></td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>

</section>