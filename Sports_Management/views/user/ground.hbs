<section>
    <link rel='stylesheet' href='/stylesheets/events.css' />
{{#each ground}}
    <div class="main">
        <div class="container">
            <div class="row1">
                <div>
                     <span>Name:{{this.GroundName}}</span>
                </div>
                <div>
                    <span>Address:{{this.GroundAddress}}</span>
                </div>
                <div>
                    <span>District:{{this.District}}</span>
                </div>
                <div>
                    <span>SubDistrict:{{this.SubDistrict}}</span>
                </div>
                 <div>
                    <span>Pincode:{{this.Pincode}}</span>
                </div>
                <div>
                    <span>ContactNumber:{{this.Contact}}</span>
                </div>


            </div>
            <div class="row2">
                <a href="/bookground/{{this._id}}">Book Ground</a>
            </div>
        </div>

    </div>
{{/each}}
</section>