<section>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />

    <div class="container">

        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col"><span class="text">Dates </span></th>
                    <th scope="col"><span class="text">Start Time</span></th>
                    <th scope="col"><span class="text">End Time</span></th>
                    <th scope="col"><span class="text">Team1</span></th>
                    <th scope="col"><span class="text">Team2</span></th>
                    <th scope="col"><span class="text">GroundName</span></th>
                    <th scope="col"><span class="text">Cancel</span></th>
                    <th scope="col"><span class="text">View Ground</span></th>
                </tr>
            </thead>
            <tbody>                
                {{#each ground}}
                <tr>
                    
                    
                    <td><span class="text">{{this.matchDetails.date}} </span></td>
                    <td><span class="text">{{this.matchDetails.start}} </span></td>
                    <td><span class="text">{{this.matchDetails.end}} </span></td>
                    <td><span class="text">{{this.matchDetails.team1}} </span></td>
                    <td><span class="text">{{this.matchDetails.team2}} </span></td>
                    <td><span class="text">{{this.ground.GroundName}} </span></td>
                    
                    <td><a href="/remove-ground/{{this._id}}" class="btn btn-danger">Cancel</a></td>
                    <td><a href="/view-ground/{{this._id}}" class="btn btn-primary">View</a></td>
                </tr>
                {{/each}}                
            </tbody>
        </table>

    </div>
</section>