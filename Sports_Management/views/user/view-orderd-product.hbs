<section>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    
    <div class="container">
        <div class="row">
                {{#each orderItem}}
                <center>
                <div class="col-md-3 p-3 ">
                    <div class=" divcol" style="width: 15rem;height:30rem">
                        <img class="card-img-top"
                            src="/product-img/{{this.product._id}}.jpg"
                            alt="Card image cap" style="height:14rem;width:14rem;" >
                        <div class="card-body ">
                            <h5 class="card-title">{{this.product.Name}}</h5>
                            <p class="card-text">Rs.{{this.product.Price}}</p>
                            <p class="card-text">{{this.product.Category}}</p>
                            <p class="card-text">{{this.product.Description}}</p>
                           
                        </div>
                    </div>
                </div>
                </center>
                {{/each}}

           </div>
    </div>
</section>